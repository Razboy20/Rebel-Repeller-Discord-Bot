{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "env": {
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "quotes": [
      "error",
      "double"
    ],
    "no-trailing-spaces": "error",
    "spaced-comment": "error",
    "camelcase": "warn",
    "indent": [
      "error",
      4
    ],
    "array-bracket-spacing": [
      "error",
      "always"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "comma-spacing": "error",
    "semi": "error"
  },
  "parserOptions": {
    "ecmaVersion": 2020
  }
}